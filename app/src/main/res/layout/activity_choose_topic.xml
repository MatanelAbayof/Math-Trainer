<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingStart="@dimen/activity_horizontal_padding"
	android:paddingLeft="@dimen/activity_horizontal_padding"
	android:paddingTop="@dimen/activity_vertical_padding"
	android:paddingEnd="@dimen/activity_horizontal_padding"
	android:paddingRight="@dimen/activity_horizontal_padding"
	tools:context=".ui.activities.quiz.choosers.ChooseTopicActivity">

	<!-- TODO change this to navigator object -->
	<TextView
		android:id="@+id/textView_navigator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:textColor="@color/navigatorText"
		android:textStyle="italic"
		app:fontFamily="sans-serif-black" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:gravity="center_horizontal"
		android:text="@string/choose_topic_title"
		android:textColor="@color/chooseTopicTitle"
		android:textStyle="bold" />


	<ScrollView
		android:id="@+id/scrollView_topics"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="2dp">

		<LinearLayout
			android:id="@+id/linearLayout_topics"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:paddingBottom="10dp"
			android:gravity="center_horizontal"
			android:orientation="vertical" />
	</ScrollView>
</LinearLayout>