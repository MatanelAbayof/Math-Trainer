<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_card_background"
    android:minHeight="200dp"
    android:padding="7dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/userCardText"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/user_name_field">
            </TextView>

            <TextView
                android:id="@+id/imageView_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/userCardText"
                android:layout_marginStart="3dp"
                android:textSize="25sp"
                android:text="">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_gender"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/gender_field"
        android:src="@drawable/bt_green">

    </ImageView>

</LinearLayout>