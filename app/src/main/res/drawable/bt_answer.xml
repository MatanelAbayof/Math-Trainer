<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true"> <!-- pressed & enabled -->
        <shape>
            <stroke android:width="4dp" android:color="@color/answerBtPressedBackStroke" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/answerBtPressedBack" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true"> <!-- focused & enabled -->
        <shape>
            <stroke android:width="3dp" android:color="@color/answerBtFocusedBackStroke" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/answerBtFocusedBack" />
        </shape>
    </item>
    <item android:state_enabled="true"> <!-- default & enabled -->
        <shape>
            <stroke android:width="2dp" android:color="@color/answerBtBackStroke" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/answerBtBack" />
        </shape>
    </item>

    <!-- disabled -->
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="2dp" android:color="@color/answerBtDisabledBackStroke" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/answerBtDisabledBack" />
        </shape>
    </item>
</selector>